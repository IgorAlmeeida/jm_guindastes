<div id="wrapper">
  <%= render partial: 'dashbord/dashbord' %>

  <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
    <div id="content">
        <%= render partial: 'dashbord/topbar' %>

        <div class="container-fluid">
            <div class = "row">
                <h1 class="h3 mb-0 text-gray-800 ml-3">Show Driver</h1>
            </div>

            <div class="card shadow mb-4 mt-4">
                <div class="card-body">
                    <p>
                      <strong>Name:</strong>
                      <%= @driver.name %>
                    </p>

                    <p>
                      <strong>Cpf:</strong>
                      <%= @driver.cpf %>
                    </p>

                    <p>
                      <strong>Cnh:</strong>
                      <%= @driver.cnh %>
                    </p>
                    <%= link_to edit_driver_path(@driver), class: ["btn", "btn-secondary", "btn-icon-split", "float-right", "ml-3"] do  %>
                        <span class="text">Edit</span>
                    <% end %>

                    <%= link_to drivers_path, class: ["btn", "btn-light", "btn-icon-split", "float-right", "ml-3"] do  %>
                        <span class="text">Back</span>
                    <% end %>
                </div>
             </div>
        </div>
        <br>
      <div>
    <%= render partial: 'dashbord/footer' %>
  <div>
  <%= render partial: 'dashbord/logout' %>
</div>




